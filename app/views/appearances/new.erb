<h1>Add a new Appearance</h1>

<% if @errors %>
    <% @errors.each do |error| %>
    <%= error %>
    <% end %>
<% end %>

<%= form_for @appearance do |f| %>
<%= f.label :guest_id, "Select a guest" %>
<br>
<%= f.collection_select(:guest_id, Guest.all, :id, :name) %>
<br>
<%= f.label :episode_id, "Select an episode" %>
<br>
<%= f.collection_select(:episode_id, Episode.all, :id, :number) %>
<br>
<%= f.label :rating, "Add a rating" %>
<br>
<%= f.select :rating, options_for_select([1, 2, 3, 4, 5]) %>
<br>
<%= f.submit %>
<% end %>